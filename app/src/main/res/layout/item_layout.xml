<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="2dp"
    tools:ignore="MissingClass">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical">  <!-- centraliza filhos verticalmente -->

        <!-- Container para os campos do evento -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvLocal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#212121" />

            <TextView
                android:id="@+id/tvTipoEvento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#424242"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/tvGrauImpacto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#424242"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/tvDataEvento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#424242"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/tvNumPessoas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#424242"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- BotÃ£o "Excluir", agora centralizado verticalmente -->
        <Button
            android:id="@+id/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Excluir"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#F44336"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
